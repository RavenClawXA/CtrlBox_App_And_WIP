<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skybg"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/clockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColor="#455A64"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/รายละเอียด"
            android:textColor="#4E342E"
            android:textSize="20sp"
            tools:ignore="TextContrastCheck"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imagebox"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/box"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"
            android:contentDescription="TODO"></ImageView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imagebox"
            android:text="@string/BoxId"
            android:textColor="#455A64" />

        <TextView
            android:id="@+id/text_boxid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/imagebox"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/truck"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="TODO"
            android:src="@drawable/truck"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"></ImageView>

        <TextView
            android:id="@+id/viewVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/truck"
            android:text="@string/FromVendor"
            android:textColor="#37474F"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/viewVendor"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sendto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="51dp"
            android:layout_toEndOf="@+id/truck"
            android:text="@string/Sendto"
            android:textColor="#37474F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="51dp"
            android:layout_toEndOf="@+id/sendto"
            android:text=""
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/imagecalendar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/calendar"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"
            android:contentDescription="TODO"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imagecalendar"
            android:text="@string/เวลาและวันที่"
            android:textColor="#263238">

        </TextView>

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/imagecalendar"
            android:text="" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp">


        <ImageView
            android:id="@+id/statusimage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/status"
            tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck"
            android:contentDescription="TODO"></ImageView>


        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/statusimage"
            android:text="Status"
            android:textColor="#263238"
            tools:ignore="HardcodedText">

        </TextView>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/statusimage"
            android:text="" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_result_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="result"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/txt_result_add_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="result"
        android:textColor="#212121" />

    <TextView
        android:id="@+id/txt_result_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="result"
        android:textColor="#000000" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/black"
            android:layout_marginLeft="55dp"

            android:text="รับเข้า"
            tools:ignore="VisualLintOverlap" />

        <Button
            android:id="@+id/btn_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_marginLeft="20dp"
            android:text="ส่งออก" />

        <Button
            android:id="@+id/Backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/black"
            android:layout_marginRight="30dp"
            android:text="กลับ"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/addbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@color/black"
            android:layout_marginLeft="50dp"
            android:text="Box Register"
            tools:ignore="HardcodedText" />

    </FrameLayout>

</LinearLayout>